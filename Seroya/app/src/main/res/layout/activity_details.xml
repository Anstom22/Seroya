<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:background="@color/ivory1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:backgroundTint="@color/dark1_green">

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/cart"
                    android:background="@color/dark1_green"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bag_foreground">

                </ImageButton>

                <TextView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Seroya"
                    android:textSize="25dp"
                    android:textColor="@color/white">

                </TextView>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/dark1_green"
                    android:scaleType="fitCenter"
                    android:id="@+id/logout"
                    android:src="@mipmap/log_foreground"></ImageButton>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/dark1_green"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="TextView"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/qty1"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="-"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:gravity="center"

                android:textColor="@color/black"
                android:backgroundTint="@color/green1"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/qty2"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:text="+"
                android:textColor="@color/black"
                android:backgroundTint="@color/green1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: "
                android:textSize="20dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <Button
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Bag"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/dark1_green"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>