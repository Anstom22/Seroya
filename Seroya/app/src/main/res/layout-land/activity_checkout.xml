<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Checkout"
    android:background="@color/ivory1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:backgroundTint="@color/dark1_green">

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/cart"
                    android:background="@color/dark1_green"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bag_foreground">

                </ImageButton>

                <TextView
                    android:layout_width="630dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Seroya"
                    android:textSize="25dp"
                    android:textColor="@color/white">

                </TextView>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/dark1_green"
                    android:scaleType="fitCenter"
                    android:id="@+id/logout"
                    android:src="@mipmap/log_foreground"></ImageButton>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:textColor="@color/dark_green"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_margin="15dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price: "
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cost"
                android:textSize="20dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:gravity="right"
                >
            </TextView>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:textSize="20dp"
                android:background="@color/green4">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Your Address"
                android:background="@color/green4"
                android:inputType="textPersonName"
                android:textSize="20dp">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Your Phone number"
                android:inputType="number"
                android:background="@color/green4"
                android:textSize="20dp">
            </EditText>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Your Email id"
                android:background="@color/green4"
                android:inputType="textEmailAddress"
                android:textSize="20dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Card number"
                android:background="@color/green4"
                android:inputType="number"
                android:textSize="20dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter card holder's name"
                android:inputType="textPersonName"
                android:background="@color/green4"
                android:textSize="20dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:hint="Expiry date"
                    android:background="@color/green4"
                    android:inputType="date"
                    android:textSize="20dp"
                    android:textColor="@color/black">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginLeft="300dp">


                <EditText
                    android:layout_width="48dp"
                    android:layout_height="60dp"
                    android:hint="CVV"
                    android:background="@color/green4"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:gravity="right">
                </EditText>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <Button
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Pay Now"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/dark1_green"></Button>
        </LinearLayout>

    </LinearLayout>
</ScrollView>